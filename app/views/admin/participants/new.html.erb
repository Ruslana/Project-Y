<% form_for([:admin, @participant], :html => { :multipart => true }) do |form| %>
	Грузим большую фотку для био:
	<%= form.file_field :avatar %>
	<div class="field">
		<%= form.label :name %><br />
		<%= form.text_field :name %>
	</div>
	<div class="field">
	    <%= form.label :bio %><br />
	    <%= form.text_area :bio %>
	  </div>
	
	<p><%= form.submit "Upload file" %></p>
<% end %>