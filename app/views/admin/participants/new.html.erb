<% form_for [:admin, @participant] do |f| %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <%= f.label :bio %><br />
    <%= f.text_area :bio %>
  </div>

<div class="field">
    <%= f.label :big_photo %><br />
    <%= f.text_field :title_photo_big %>
  </div>

<div class="field">
    <%= f.label :small_photo %><br />
    <%= f.text_field :title_photo_small %>
  </div>
  <%= check_box_tag "small_photo", f.id %>
	
  <%= render :partial => 'upload', :locals => {:participant => @participant} %>

  <div class="submit">
    <%= f.submit "Go" %>
  </div>
  
<% end %>