<%= link_to "create new post", new_admin_post_path %><br />
<br />
<% for post in @posts %>
	<%= post.title %><br />
	<%= post.body %><br />
	<%= post.date.strftime("%A, %d %B %Y") %><br />
	<%= link_to "show", admin_post_path(post) %>
	<%= link_to "edit", edit_admin_post_path(post) %>
	<%= link_to "destroy", [:admin, post], 
			:confirm => 'Are you sure?', 
			:method => :delete
			%>
	<br /><br />
<% end %>
<%= will_paginate @posts %>