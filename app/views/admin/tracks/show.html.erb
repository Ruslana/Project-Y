Full_file:
<%= link_to @track.title_full_file, @track.audio_file_full.music.url if @track.audio_file_full != nil %><br />

<% if @track.lyric != nil %>
	(<%= link_to "show lyric", admin_lyric_path(:id => @track.lyric.id)%>)
<% else %>
	(<%= link_to "create lyric", new_admin_lyric_path(:id => @track.id) %>)
<% end %>
<br /><br />

