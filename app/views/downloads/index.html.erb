<!-- home body -->
		<div id="content-sub">
			<div id="downloads-tables">
				<h3 title="Download Tracks">Download Tracks</h3>
				<form action="#" method="post">
				<table cellpadding="0" cellspacing="0" summary="List of downloadable songs">
				<tr>
					<th class="first">Album Title</th>
					<th>Track Title</th>
					<th>Time</th>
					<th>Price</th>
					<th class="last" style="text-align:center">Sample</th>
				</tr>
				<% for upload in @album.uploads %>
					<tr class="one">
					<td><strong><%= @album.title %></strong></td>
					<td><%= check_box_tag :name => "song", :value => upload.title, :id => upload.title %><strong><%= upload.title %></strong></td>
					<td><span><%= upload.time %></span></td>
					<td><%= upload.price %></td>
					<td style="text-align:center"><%= link_to image_tag("/images/speaker.gif"), upload.file.url %></td>		
					</tr>
				<% end %>	
				<tr><td class="two-last" colspan="5"></td></tr>
				<tr class="two">
					<td><strong>Total Ttrack(s)</strong></td>
					<td colspan="2"><strong style="float:right;padding-right:25px;">Total price</strong><input type="text" name="total" value="3" id="total" style="width:40px" /></td>
					<td> $3.00</td>
					<td style="text-align:center">
						<%= link_to image_tag("/images/buy-button.gif"), :action => 'checkout' %>
						<input type="submit" name="buy" value="&nbsp;" class="buy" /></td>
				</tr>			
				</table>
				</form>
			</div>	 	
		</div>
