<p><h2>Trecks:</h2></p>
<% for upload in @order.uploads %>
	<% if @order.complete %>
		<p><%= link_to upload.name, upload.music.url %></p>
	<% else %>
		<p><%= upload.title %></p>
	<% end %>
<% end %>
<% unless @order.complete %>
	<p>Your order total is <%= @order.amount %></p>
	<p><%= link_to image_tag('https://www.paypal.com/en_US/i/btn/btn_xpressCheckout.gif'), :action => 'checkout', :id => @order.secret_hash %></p>
<% end %>