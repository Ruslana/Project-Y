<div id="content-blog">
	<%= link_to "RSS Feed", formatted_posts_url(:rss) %>
	<h3 title="Blog Entries">Blog Entries</h3>
	<% for post in @posts %>
		<h4><%= post.title %></h4>
		<p><%= post.date.strftime("%A, %d %B %Y") %><br />
		<%= post.body %>
		<hr />
	<% end %>
</div>

<%= will_paginate @posts %>